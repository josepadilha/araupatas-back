{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "lib": ["es2019"],
    "moduleResolution": "node",
    "rootDir": "../",
    "outDir": "lib",
    "baseUrl": "../",
    "paths": {
      "*": ["src/*"]
    },
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*",
    "../src/**/*" ,
    "src/types/**/*.d.ts"
  ],
  "exclude": ["node_modules", "../node_modules"]
}